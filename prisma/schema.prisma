generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Reading {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  timestamp DateTime
  temp      Float
  rehu      Float
  co2c      Int
  sensor    Sensor   @relation(fields: [sensorId], references: [id])
  sensorId  String   @db.ObjectId
}

model Sensor {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  iqrfID Int
  name     String    @unique
  readings Reading[]
}
